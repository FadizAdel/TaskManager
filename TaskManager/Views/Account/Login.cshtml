@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}

<form class="form form-control" method="post">
    <label class="form-label col-form-label">User Name:</label>
    <input class="input-group-text" type="text" name="userName" required />

    <label class="form-label col-form-label">Password:</label>
    <input class="input-group-text" type="password" name="password" required />

    <button class="btn btn-outline-primary" type="submit">Login</button>
</form>

<div class="mt-3">
    <p>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></p>
</div>

